<Window x:Class="ConfocalControl.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ni="http://schemas.ni.com/controls/2009/xaml/presentation"
        Title="MainWindow" Height="480" Width="640" 
        Loaded="Window_Loaded">
    <Grid>
        <TextBox x:Name="galvo_X_display" HorizontalAlignment="Left" Height="23" Margin="82,65,0,0" TextWrapping="Wrap" Text="Galvo X" VerticalAlignment="Top" Width="75" RenderTransformOrigin="0.5,0.454"/>
        <Button x:Name="galvo_setpoint_reader" Content="Read Galvos" HorizontalAlignment="Left" Margin="82,28,0,0" VerticalAlignment="Top" Width="75" Click="galvo_setpoint_Click"/>
        <TextBox x:Name="galvo_Y_display" HorizontalAlignment="Left" Height="23" Margin="82,99,0,0" TextWrapping="Wrap" Text="Galvo Y" VerticalAlignment="Top" Width="75"/>
        <Label Content="Galvo X" HorizontalAlignment="Left" Margin="18,62,0,0" VerticalAlignment="Top"/>
        <Label Content="Galvo Y" HorizontalAlignment="Left" Margin="18,97,0,0" VerticalAlignment="Top"/>
        <Label Content="Set Galvos" HorizontalAlignment="Left" Margin="167,26,0,0" VerticalAlignment="Top" Width="75"/>
        <TextBox x:Name="galvo_X_set" HorizontalAlignment="Left" Height="23" Margin="167,64,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="75" KeyUp="galvo_X_set_TextChanged"/>
        <TextBox x:Name="galvo_Y_set" HorizontalAlignment="Left" Height="23" Margin="167,99,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="75" KeyUp="galvo_Y_set_TextChanged"/>
    </Grid>
</Window>
