<Window x:Class="ConfocalControl.HardwareConfigure"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="HardwareConfigure" Height="300" Width="300">
    <Grid HorizontalAlignment="Left" Width="292" Height="270" VerticalAlignment="Top">
        <ComboBox x:Name="APD1_channel_set" HorizontalAlignment="Left" Margin="125,53,0,0" VerticalAlignment="Top" Width="120"/>
        <Label Content="Confocal APD" HorizontalAlignment="Left" Margin="35,53,0,0" VerticalAlignment="Top"/>
        <Button x:Name="close_button" Content="OK" HorizontalAlignment="Left" Margin="70,218,0,0" VerticalAlignment="Top" Width="75" Click="ok_Click"/>
        <Button x:Name="cancel_button" Content="Cancel" HorizontalAlignment="Left" Margin="150,218,0,0" VerticalAlignment="Top" Width="75" Click="cancel_button_Click"/>

    </Grid>
</Window>
