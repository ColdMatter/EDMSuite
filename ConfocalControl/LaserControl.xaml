<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ni="http://schemas.ni.com/controls/2009/xaml/presentation" x:Class="ConfocalControl.LaserControl"
        Title="LaserControl" Height="600" Width="600" Closing="Window_Closing">
    <Grid>
        <Button x:Name="connect_Button" Content="Connect" HorizontalAlignment="Left" Margin="29,41,0,0" VerticalAlignment="Top" Width="75" Click="connect_Button_Click"/>
        <Button x:Name="disconnect_Button" Content="Disconnect" HorizontalAlignment="Left" Margin="29,68,0,0" VerticalAlignment="Top" Width="75" Click="disconnect_Button_Click"/>
        <Button x:Name="checkConnection_Button" Content="Check" HorizontalAlignment="Left" Margin="109,41,0,0" VerticalAlignment="Top" Width="75" Click="checkConnection_Button_Click"/>
        <TextBox x:Name="checkConnection_Reader" HorizontalAlignment="Left" Height="23" Margin="109,13,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="75" IsReadOnly="True" HorizontalContentAlignment="Center"/>
        <Button x:Name="ping_Button" Content="Ping Test" HorizontalAlignment="Left" Margin="109,68,0,0" VerticalAlignment="Top" Width="75" Click="ping_Button_Click"/>
        <Label Content="TCP Connection" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <Label Content="Etalon Lock" HorizontalAlignment="Left" Margin="34,110,0,0" VerticalAlignment="Top"/>
        <Button x:Name="etalonLock_Button" Content="Lock" HorizontalAlignment="Left" Margin="29,141,0,0" VerticalAlignment="Top" Width="75" Click="etalonLock_Button_Click"/>
        <Button x:Name="etalonUnLock_Button" Content="Unlock" HorizontalAlignment="Left" Margin="29,168,0,0" VerticalAlignment="Top" Width="75" Click="etalonUnLock_Button_Click"/>
        <Button x:Name="etalonCheck_Button" Content="Check" HorizontalAlignment="Left" Margin="109,141,0,0" VerticalAlignment="Top" Width="75" Click="etalonCheck_Button_Click"/>
        <TextBox x:Name="etalonCheck_Reader" HorizontalAlignment="Left" Height="23" Margin="109,113,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="75" IsReadOnly="True" HorizontalContentAlignment="Center"/>
        <Label Content="Wavelength" HorizontalAlignment="Left" Margin="31,209,0,0" VerticalAlignment="Top"/>
        <Button x:Name="wavelengthSet_Button" Content="Set" HorizontalAlignment="Left" Margin="29,240,0,0" VerticalAlignment="Top" Width="75" Click="wavelengthSet_Button_Click"/>
        <ni:NumericTextBoxDouble x:Name="wavelengthSet_Numeric" HorizontalAlignment="Left" Height="23" Margin="29,267,0,0" VerticalAlignment="Top" Width="75" HorizontalContentAlignment="Center"/>
        <Button x:Name="wavelengthRead_Button" Content="Read" HorizontalAlignment="Left" Margin="109,240,0,0" VerticalAlignment="Top" Width="75" Click="wavelengthRead_Button_Click"/>
        <Button x:Name="wavelengthStop_Button" Content="Stop Tuning" HorizontalAlignment="Left" Margin="109,267,0,0" VerticalAlignment="Top" Width="75" Click="wavelengthStop_Button_Click"/>
        <TextBox x:Name="wavelength_Read" HorizontalAlignment="Left" Height="23" Margin="109,212,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="75" IsReadOnly="True" HorizontalContentAlignment="Center"/>
        <Label Content="nm" HorizontalAlignment="Left" Margin="189,209,0,0" VerticalAlignment="Top"/>
        <Label Content="nm" HorizontalAlignment="Left" Margin="50,284,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
