                        <CheckBox x:Name="Pulse1Enabled" Margin="350,40,98.571,165.857" IsChecked="True" Click="btnPulseEnable_Click"/>
                        <CheckBox x:Name="Pulse2Enabled" Margin="350,69,98.571,137.857" IsChecked="True" Click="btnPulseEnable_Click"/>
