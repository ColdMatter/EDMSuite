<Window x:Class="MOTMaster2.ParametersWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Sequence Parameters" Height="300" Width="500" VerticalContentAlignment="Stretch" HorizontalContentAlignment="Stretch">
    <Grid>
        <DataGrid Name="parameterGrid" Margin="0,0,0,47.5" >
            <DataGrid.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="New Parameter" Command="{Binding Path=NewParameter}"/>
                    <MenuItem Header="Delete Parameter" Command="{Binding Path=DeleteParameter}"/>
                </ContextMenu>
            </DataGrid.ContextMenu>
        </DataGrid>
        <Button Content="OK" Height="20" Width="40" Margin="50,230,205,22.5" Click="OK_Click"/>
        <Button Content="Cancel" Height="20" Width="40" Margin="205,230,50,22.5" Click="Cancel_Click"/>
    </Grid>
</Window>
