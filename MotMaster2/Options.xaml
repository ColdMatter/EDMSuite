<Window x:Class="MotMaster2.Options"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        Title="Options" Height="600" Width="480">
    <Grid>
        
        <TabControl HorizontalAlignment="Left" Height="215" VerticalAlignment="Top" Width="292">
            <TabItem Header="Hardware">
                <Grid Background="#FFE5E5E5">
                    <xctk:PropertyGrid x:Name="_propertyGrid" Width="450" Margin="10"
                                     AutoGenerateProperties="False"/>
                </Grid>
            </TabItem>
            <TabItem Header="File System">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
        </TabControl>
        <Button Content="OK" HorizontalAlignment="Left" Margin="200,220,0,0" VerticalAlignment="Top" Width="75"/>
        <Button Content="Cancel" HorizontalAlignment="Left" Margin="20,220,0,0" VerticalAlignment="Top" Width="75"/>

    </Grid>
</Window>
