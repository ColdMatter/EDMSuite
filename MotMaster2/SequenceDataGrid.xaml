<UserControl x:Class="MOTMaster2.SequenceDataGrid"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             xmlns:ms="clr-namespace:System;assembly=mscorlib" 
             xmlns:controls="clr-namespace:MOTMaster2"
             xmlns:local="clr-namespace:MOTMaster2.Sequence"
             d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.Resources>
        <ObjectDataProvider x:Key="analogProvider" MethodName="GetValues" ObjectType="{x:Type ms:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="local:AnalogChannelSelector" />
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
        <ObjectDataProvider x:Key="digitalProvider" MethodName="GetValues" ObjectType="{x:Type ms:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="local:DigitalChannelSelector" />
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
    </UserControl.Resources>
    <Grid>
        <DataGrid Name ="sequenceDataGrid" HorizontalAlignment="Left" VerticalAlignment="Top" Height="Auto" Width="Auto" AutoGeneratedColumns="sequenceDataGrid_AutoGeneratedColumns" SelectedCellsChanged="sequenceDataGrid_SelectedCellsChanged" ItemsSource="{Binding SequenceSteps}" CurrentCellChanged="sequenceDataGrid_CurrentCellChanged">
          
        </DataGrid>
    </Grid>
</UserControl>
